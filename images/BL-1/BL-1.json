{ 
  "variables": {
    "aws_access_key": "", 
    "aws_secret_key": "",
    "source_ami": "",
    "region": "",
    "ami_name": "",
    "cookbook_path": "",
    "description": "Basic Image for CentOS 6.5",
    "source_ami_name": "BL-1 Raw"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "{{user `source_ami`}}",
    "ami_block_device_mappings": [{
    "device_name": "/dev/sda",
    "delete_on_termination": true
    }],
    "launch_block_device_mappings": [{
    "device_name": "/dev/sda",
    "delete_on_termination": true
    }],
    "instance_type": "t1.micro",
    "ssh_username": "root",
    "ami_name": "{{user `ami_name`}}"
  }],
  "provisioners": [{
    "type": "chef-solo",
    "cookbook_paths": ["{{user `cookbook_path`}}"],
    "run_list": [
	"recipe[BL-1::loggly]",
	"recipe[BL-1::newrelic]",
	"recipe[BL-1::miscprofile]",
	"recipe[BL-1::extrapkgs]",
	"recipe[BL-1::dnsclient]",
	"recipe[BL-1::snmpd]",
	"recipe[BL-1::iptables]",
	"recipe[BL-1::root]"
    ]
  }]
}


